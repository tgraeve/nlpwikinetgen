<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.text.*?>
<?import javafx.geometry.*?>
<?import java.lang.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.layout.VBox?>

<TabPane prefHeight="500.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="main.DataBuilderController">
   <tabs>
      <Tab closable="false" text="Data Builder">
         <content>
            <VBox maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="467.0" prefWidth="600.0">
               <children>
                  <VBox prefHeight="67.0" prefWidth="600.0">
                     <children>
                        <HBox alignment="CENTER_LEFT" prefHeight="48.0" prefWidth="600.0">
                           <children>
                              <Label text="Config File: ">
                                 <HBox.margin>
                                    <Insets right="5.0" />
                                 </HBox.margin>
                                 <tooltip>
                                    <Tooltip text="Config while which includes all parameters for accessing the database" />
                                 </tooltip>
                              </Label>
                              <TextField fx:id="tfConfigFile" HBox.hgrow="ALWAYS">
                                 <HBox.margin>
                                    <Insets right="10.0" />
                                 </HBox.margin>
                              </TextField>
                              <Button fx:id="btnConfigFile" mnemonicParsing="false" onAction="#loadConfigFile" text="Choose" />
                           </children>
                           <padding>
                              <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                           </padding>
                        </HBox>
                        <HBox alignment="CENTER_LEFT" prefHeight="51.0" prefWidth="600.0">
                           <children>
                              <Label text="Output Folder:">
                                 <HBox.margin>
                                    <Insets right="5.0" />
                                 </HBox.margin>
                                 <tooltip>
                                    <Tooltip text="Select an output folder to store graph and annotation data" />
                                 </tooltip>
                              </Label>
                              <TextField fx:id="tfOutputFolderDB" HBox.hgrow="ALWAYS">
                                 <HBox.margin>
                                    <Insets right="10.0" />
                                 </HBox.margin>
                              </TextField>
                              <Button fx:id="btnOutputFolder" mnemonicParsing="false" onAction="#loadOutputFolder" text="Choose" />
                           </children>
                           <padding>
                              <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                           </padding>
                        </HBox>
                        <HBox alignment="CENTER_LEFT" prefHeight="0.0" prefWidth="600.0">
                           <children>
                              <Label text="Source:" />
                              <CheckBox fx:id="cbWholeWiki" mnemonicParsing="false" onAction="#toggleSource" text="Whole Wikipedia">
                                 <HBox.margin>
                                    <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                                 </HBox.margin>
                              </CheckBox>
                              <Label text="or Category:" />
                              <TextField fx:id="tfCategory" HBox.hgrow="ALWAYS">
                                 <HBox.margin>
                                    <Insets left="10.0" />
                                 </HBox.margin>
                              </TextField>
                           </children>
                           <padding>
                              <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                           </padding>
                        </HBox>
                        <HBox alignment="CENTER_LEFT" prefHeight="40.0" prefWidth="600.0">
                           <children>
                              <CheckBox fx:id="cbBuildGraph" mnemonicParsing="false" selected="true" text="Build Graph (Nodes/Edges)">
                                 <HBox.margin>
                                    <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                                 </HBox.margin>
                                 <tooltip>
                                    <Tooltip text="Initially builds all Nodes and Edges of the selected source." />
                                 </tooltip>
                              </CheckBox>
                              <CheckBox fx:id="cbBuildIndex" mnemonicParsing="false" selected="true" text="Build Lucene Index">
                                 <HBox.margin>
                                    <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                                 </HBox.margin>
                                 <tooltip>
                                    <Tooltip text="Initially builds a Lucene Index of the selected source." />
                                 </tooltip>
                              </CheckBox>
                           </children>
                        </HBox>
                     </children>
                  </VBox>
                  <SplitPane dividerPositions="0.5" prefHeight="285.0" prefWidth="600.0" VBox.vgrow="SOMETIMES">
                    <items>
                        <ScrollPane prefHeight="200.0">
                           <content>
                              <TreeView fx:id="tvOptions" onContextMenuRequested="#tvSelection" onKeyReleased="#tvSelection" onMouseClicked="#tvSelection" prefHeight="237.0" prefWidth="300.0" />
                           </content>
                        </ScrollPane>
                        <StackPane fx:id="stackParam">
                           <children>
                              <VBox fx:id="ngram" visible="false">
                                 <children>
                                    <Text strokeType="OUTSIDE" strokeWidth="0.0" text="N-gram based similarity filters." wrappingWidth="200.0">
                                       <VBox.margin>
                                          <Insets bottom="20.0" />
                                       </VBox.margin>
                                    </Text>
                                 </children>
                                 <padding>
                                    <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
                                 </padding>
                              </VBox>
                              <VBox fx:id="CharacterNGram" visible="false">
                                 <children>
                                    <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Character N-gram Measure">
                                       <VBox.margin>
                                          <Insets bottom="20.0" />
                                       </VBox.margin>
                                    </Text>
                                    <CheckBox fx:id="cbCharNGram" mnemonicParsing="false" text="Include" />
                                 </children>
                                 <padding>
                                    <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
                                 </padding>
                              </VBox>
                              <VBox fx:id="WikiMinorFlag" visible="false">
                                 <children>
                                    <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Wiki Minor Flag">
                                       <VBox.margin>
                                          <Insets bottom="20.0" />
                                       </VBox.margin>
                                    </Text>
                                    <CheckBox fx:id="cbWikiMinorFlag" mnemonicParsing="false" text="Include" />
                                 </children>
                                 <padding>
                                    <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
                                 </padding>
                              </VBox>
                           </children>
                        </StackPane>
                    </items>
                  </SplitPane>
                  <HBox alignment="CENTER_LEFT" prefHeight="100.0" prefWidth="200.0">
                     <children>
                        <Button fx:id="btnGenData" mnemonicParsing="false" onAction="#generate" text="Generate Data">
                           <HBox.margin>
                              <Insets bottom="10.0" left="10.0" top="10.0" />
                           </HBox.margin>
                        </Button>
                        <Button fx:id="btnClearFolder" mnemonicParsing="false" text="Clear Folder">
                           <HBox.margin>
                              <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                           </HBox.margin>
                        </Button>
                        <HBox alignment="CENTER_LEFT" prefHeight="47.0" prefWidth="360.0">
                           <children>
                              <ProgressBar fx:id="pbGenerating" prefWidth="200.0" progress="0.0" visible="false">
                                 <HBox.margin>
                                    <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                                 </HBox.margin>
                              </ProgressBar>
                              <Text fx:id="tStatus" strokeType="OUTSIDE" strokeWidth="0.0" wrappingWidth="135.0">
                                 <font>
                                    <Font size="10.0" />
                                 </font>
                              </Text>
                           </children>
                        </HBox>
                     </children>
                  </HBox>
               </children>
            </VBox>
         </content>
      </Tab>
      <Tab closable="false" text="Graph Builder">
         <content>
            <VBox prefHeight="200.0" prefWidth="100.0">
               <children>
                  <VBox prefHeight="67.0" prefWidth="600.0">
                     <children>
                        <HBox alignment="CENTER_LEFT" prefHeight="51.0" prefWidth="600.0">
                           <children>
                              <Label text="Data Folder:">
                                 <tooltip>
                                    <Tooltip text="Select an output folder to store graph and annotation data" />
                                 </tooltip>
                                 <HBox.margin>
                                    <Insets right="5.0" />
                                 </HBox.margin>
                              </Label>
                              <TextField fx:id="tfOutputFolderGB" HBox.hgrow="ALWAYS">
                                 <HBox.margin>
                                    <Insets right="10.0" />
                                 </HBox.margin>
                              </TextField>
                              <Button fx:id="btnDataFolder" mnemonicParsing="false" onAction="#loadOutputFolder" text="Choose" />
                           </children>
                           <padding>
                              <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                           </padding>
                        </HBox>
                        <HBox alignment="CENTER_LEFT" prefHeight="0.0" prefWidth="600.0">
                           <children>
                              <Label text="Existing Data: " />
                              <Text fx:id="tExData" strokeType="OUTSIDE" strokeWidth="0.0" wrappingWidth="490.21875" />
                           </children>
                           <padding>
                              <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                           </padding>
                        </HBox>
                     </children>
                  </VBox>
                  <HBox alignment="CENTER_LEFT" prefHeight="100.0" prefWidth="200.0">
                     <children>
                        <Button alignment="CENTER" mnemonicParsing="false" text="Button">
                           <HBox.margin>
                              <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
                           </HBox.margin>
                        </Button>
                     </children>
                  </HBox>
               </children>
            </VBox>
         </content>
      </Tab>
   </tabs>
</TabPane>
